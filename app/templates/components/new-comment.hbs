{{#if addNewComment}}
  <h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        {{input value=content id="content"}}
      </div>
      <button {{action 'saveComment'}}>Save Comment</button>
    </form>
  </div>
  {{else}}
  <button class="btn-sm btn-success"{{action 'commentFormShow'}}>New Comment</button>
{{/if}}
