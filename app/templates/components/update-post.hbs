{{#if updatePostForm}}
<h4>Update {{post.author}}'s question: {{post.question}}</h4>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author" placeholder=post.author}}
    </div>
    <div class="form-group">
      <label for="question">Question:</label>
      {{input value=question id="question" placeholder=post.question}}
    </div>
    <div class="form-group">
      <label for="notes">Notes:</label>
      {{input value=notes id="notes" placeholder=post.notes}}
    </div>
    <button {{action 'update' post}}>Save Update</button>
  </form>
</div>
{{else}}
  <h5 class {{action 'updatePostForm'}}>Click here to update your post!</h5>
{{/if}}
