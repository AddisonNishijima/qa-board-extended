{{#if addNewPost}}
<div id="newpost">
  <h1>New Post</h1>
  <form>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="question">Question:</label>
      {{input value=question id="question"}}
    </div>
    <div class="form-group">
      <label for="notes">Notes:</label>
      {{input value=notes id="notes"}}
    </div>
    <button {{action 'savePost1'}}>Save post</button>
  </form>
  </div>
  {{else}}
  <button class="button_newpost" {{action 'postFormShow'}}>Add a New Post</button>
{{/if}}
